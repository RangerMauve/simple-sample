{
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "plugins": [
    "react"
  ],
  "env": {
    "browser": true,
    "es6": true
  },
  "rules": {
    "no-undef": 2,
    "no-unused-vars": 2,
    "strict": [2, "global"],
    "new-cap": 0,
    "indent": ["error", "tab", {"MemberExpression": 1, "ArrayExpression": 1, "ObjectExpression": 1 }],
    "no-console": 0,
    "no-invalid-this": 0,
    "no-trailing-spaces": 2,
    "semi": ["error", "always"],
    "key-spacing": ["warn", { "beforeColon": false, "afterColon": true }],
    "space-infix-ops": ["warn"],
    "object-curly-newline": ["warn", {"minProperties": 1}],
    "no-shadow": ["error"],
    "no-undef-init": ["error"]
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaFeatures": {
      "impliedStrict": true,
      "jsx": true
    },
    "ecmaVersion": 6
  }
}
